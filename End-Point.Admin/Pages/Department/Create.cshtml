@page
@model End_Point.Admin.Pages.Department.CreateModel
@{
}
<div class="container-fluid">
    <h5 class="title text-center">Add Department Form</h5>
    <div class="row justify-content-center">

        <div class="card col-8" style="margin: 10px 0px;">
            <div class="card-body">
                <form method="post" class=" row justify-content-center">
                    <div class="form-group col-8">
                        <label asp-for="addDepartmentModel.TITLE"> Title</label>
                        <input asp-for="addDepartmentModel.TITLE" class="form-control" />
                        <span asp-validation-for="addDepartmentModel.TITLE" class="text-danger"></span>
                    </div>                    
                    <div class="form-group col-8">
                        <label asp-for="addDepartmentModel.DESCRIPTION_">Description</label>
                        <textarea rows="5" asp-for="addDepartmentModel.DESCRIPTION_" class="form-control"></textarea>
                        <span asp-validation-for="addDepartmentModel.DESCRIPTION_" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary mt-5" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.result.iSuccess && !string.IsNullOrWhiteSpace(Model.result.Message))
    {
        <script>
            swal.fire({
                title: "Success",
                text: "@Html.Raw(Model.result.Message)",
                icon: "success"
            });
        </script>
    }
    else if (!Model.result.iSuccess && !string.IsNullOrWhiteSpace(Model.result.Message))
    {
        <script>
            swal.fire({
                title: "error",
                text: "@Html.Raw(Model.result.Message)",
                icon: "error"
            });
        </script>
    }
}

