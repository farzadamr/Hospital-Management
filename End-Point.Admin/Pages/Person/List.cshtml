@page
@model End_Point.Admin.Pages.Person.ListModel

@{
    ViewData["Title"] = "Person List";
}

<div class="container-fluid">
    <h5 class="title">Person's List</h5>
    <div class="card" style="margin: 10px 0px; padding: 100px 0px;">
        <div class="card-body">
            <form method="post" asp-page-handler="GetList">
                <label class="mr-2">Search Key</label>
                <div class="form-group d-flex align-items-center">
                    <input type="text" name="SearchKey" class="form-control mr-2" placeholder="National code">
                    <button type="submit" class="btn btn-primary">GetList</button>
                </div>
                <small class="form-text text-muted mt-2"> If you want to see the list of all persons, leave the search key empty. </small>
            </form>
        </div>
    </div>

    @if (Model.PersonsList != null && Model.PersonsList.Count > 0)
    {
        <div class="card" style="padding: 0px;">
            <div class="card-body" >
                <div class="container">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>National Code</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var person in Model.PersonsList)
                            {
                                <tr>
                                    <td>@person.NationalCode</td>
                                    <td>@person.FirstName</td>
                                    <td>@person.LastName</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editModal-@person.NationalCode">Edit</button>
                                        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal-person.NationalCode">Delete</button>
                                    </td>
                                </tr>

                                <!-- Modal for Edit -->
                                <div class="modal fade" id="editModal-@person.NationalCode" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@person.NationalCode" aria-hidden="true" style="z-index: 1050;">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="editModalLabel-@person.NationalCode">Edit Person @person.NationalCode</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post" asp-page-handler="EditPerson">
                                                    <input type="hidden" asp-for="editPersonModel.NationalCode" value="@person.NationalCode" readonly />
                                                    <div class="form-group">
                                                        <label for="editPersonModel.FirstName">First Name</label>
                                                        <input type="text" class="form-control" asp-for="editPersonModel.FirstName" value="@person.FirstName" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="editPersonModel.LastName">Last Name</label>
                                                        <input type="text" class="form-control" asp-for="editPersonModel.LastName" value="@person.LastName" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="editPersonModel.Password">Password</label>
                                                        <input type="password" class="form-control" asp-for="editPersonModel.Password" />
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Save</button>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal for Delete -->
                                <div class="modal fade" id="deleteModal-@person.NationalCode" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@person.NationalCode" aria-hidden="true" style="z-index: 1050;">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel-@person.NationalCode">Delete Person</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this person?
                                            </div>
                                            <div class="modal-footer">
                                                <form method="post" asp-page-handler="DeletePerson">
                                                    <input type="hidden" asp-for="personId" value="@person.NationalCode" />
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
               
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
